<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/activity_common"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_word"
            android:text="当前手机号:"
            android:textSize="14sp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/set_upPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:background="@drawable/shape_eidt2"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_word"
            android:text="输入新密码:"
            android:textSize="14sp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/set_upPwd_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:textColorHint="@color/gray_word"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:background="@drawable/shape_eidt2"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/up_sure_pwdtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_word"
            android:text="输入验证码:"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/set_upPwd_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:textColorHint="@color/gray_word"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:background="@drawable/shape_eidt2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/up_sure_pwdtxt"
            android:layout_toLeftOf="@+id/set_up_codeBut"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:singleLine="true"/>
        <Button
            android:id="@+id/set_up_codeBut"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="获取验证码"
            android:textColor="@color/shop_details"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"/>
    </RelativeLayout>
    <Button
        android:id="@+id/set_upPwd_but"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_button_gray"
        android:textColor="@color/but_word"
        android:textSize="14sp"
        android:text="确认更改"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>