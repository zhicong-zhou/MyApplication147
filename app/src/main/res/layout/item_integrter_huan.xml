<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_intergetr">

        <ImageView
            android:id="@+id/item_integr_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/integrate_name1" />

        <TextView
            android:id="@+id/item_integr_line"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/item_integr_img"
            android:background="@color/pale_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_integr_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_integr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摩拜单车30天骑行车"
                android:textColor="@color/home_word"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_integr_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="699积分"
                android:textColor="@color/red_word"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_integr_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市场价格：741"
                android:textColor="@color/gray_word"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_integr_but"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/shop_buttonBg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="换"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
