<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_ming_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户提现"
                android:textSize="14sp"
                android:textColor="@color/black_word"/>
            <TextView
                android:id="@+id/item_ming_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-08-12"
                android:textSize="12sp"
                android:textColor="@color/home_word"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_ming_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_word"
            android:text="￥40"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
</LinearLayout>
