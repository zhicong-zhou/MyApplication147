<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/item_feedback_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不稳定"
            android:textColor="@color/home_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_feedback_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待处理"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@drawable/shape_size_selectd"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </RelativeLayout>
    <com.jzkl.util.MyGridView
        android:id="@+id/item_feedback_gird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:layout_marginLeft="10dp"
        android:horizontalSpacing="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/item_feedback_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/comment_word"
        android:text="@string/solicu_happy_txt"
        android:padding="10dp"
        android:lineSpacingExtra="5dp"
        android:letterSpacing="0.2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
    <TextView
        android:id="@+id/item_feedback_descript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/comment_word"
        android:text="回复：待处理待处理待处理待处理"
        android:padding="15dp"
        android:lineSpacingExtra="5dp"
        android:letterSpacing="0.2"
        android:background="@color/feedback_reply"/>
    <TextView
        android:id="@+id/item_feedback_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="2018-08-25"
        android:textColor="@color/comment_word"
        android:textSize="12sp"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/pale_gray"/>

</LinearLayout>
