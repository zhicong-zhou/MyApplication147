<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/item_ji_buy_img"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/xianshi_img1"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/item_jibuy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家庭迷你静音吸湿空气除湿器"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/shop_word"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/item_jibuy_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="松下压缩机  打造100%全屋除湿"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/gray_word"
                android:singleLine="true"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/item_jibuy_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限时价"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_word"
                    android:singleLine="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/item_jibuy_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥199.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_word"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/item_jibuy_txt"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/item_jibuy_priced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原价￥188.90"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_word"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_jibuy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_word"
                    android:text="仅剩7件"
                    android:textSize="12sp"
                    android:background="@drawable/shape_jibuy_num"
                    android:gravity="center"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/item_jibuy_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="立即抢购"
                    android:textSize="12sp"
                    android:background="@drawable/shape_jibuy_bg"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
</LinearLayout>
