<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.BusinessRenzActivity">

    <LinearLayout
        android:id="@+id/sulicu_happy_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/activity_common" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pale_gray" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sulicu_happy_but"
        android:scrollbars="none"
        android:layout_below="@+id/sulicu_happy_ll"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="商家信息"
                android:textColor="@color/home_word"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/bus_star"
                    android:drawablePadding="5dp"
                    android:text="商户名称"
                    android:textColor="@color/home_word"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/sulicu_happy_busName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_eidt2"
                    android:hint="请输入"
                    android:textColor="@color/home_word"
                    android:textColorHint="@color/gray_word"
                    android:textSize="14sp"
                    android:singleLine="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/bus_star"
                    android:drawablePadding="5dp"
                    android:text="联系人"
                    android:textColor="@color/home_word"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/sulicu_happy_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_eidt2"
                    android:hint="请输入"
                    android:textColor="@color/home_word"
                    android:textColorHint="@color/gray_word"
                    android:textSize="14sp"
                    android:singleLine="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/bus_star"
                    android:drawablePadding="5dp"
                    android:text="联系方式"
                    android:textColor="@color/home_word"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/sulicu_happy_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_eidt2"
                    android:hint="请输入"
                    android:textColor="@color/home_word"
                    android:textColorHint="@color/gray_word"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="11"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/bus_star"
                    android:drawablePadding="5dp"
                    android:text="经营地址"
                    android:textColor="@color/home_word"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/sulicu_happy_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_eidt2"
                    android:hint="请输入"
                    android:textColor="@color/home_word"
                    android:textColorHint="@color/gray_word"
                    android:textSize="14sp"
                    android:singleLine="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />
            <!--身份证正反面-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="身份证正反面"
                android:textColor="@color/home_word"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/sulicu_happy_zmll"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/sulicu_happy_zm"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible"
                        android:background="@drawable/shape_address">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/gray_word"
                            android:textSize="50sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身份证正面照片"
                            android:textColor="@color/comment_word"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/sulicu_happy_zm_img"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@null"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fan_ll"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/sulicu_happy_fm"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible"
                        android:background="@drawable/shape_address">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/gray_word"
                            android:textSize="50sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身份证反面照片"
                            android:textColor="@color/comment_word"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/sulicu_happy_fm_img"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/ab"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <!--营业执照-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="营业执照"
                android:textColor="@color/home_word"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/sulicu_happy_yyzzll"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sulicu_happy_yyzz"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:gravity="center"
                    android:background="@drawable/shape_address">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/gray_word"
                        android:textSize="50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传营业执照"
                        android:textColor="@color/comment_word"
                        android:textSize="14sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/sulicu_happy_yyzz_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/ab"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>
            </LinearLayout>
            <!--收银台照片-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="店铺照片3张（门头照、收银台、内景）"
                android:textColor="@color/home_word"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:id="@+id/sulicu_happy_mtll"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/sulicu_happy_mt"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/shape_address">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/gray_word"
                            android:textSize="50sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传门头照片"
                            android:textColor="@color/comment_word"
                            android:textSize="12sp"
                            android:maxLines="1"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/sulicu_happy_mt_img"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@mipmap/ab"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sulicu_happy_sytll"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/sulicu_happy_syt"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/shape_address">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/gray_word"
                            android:textSize="50sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传收银台照片"
                            android:textColor="@color/comment_word"
                            android:textSize="12sp"
                            android:maxLines="1"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/sulicu_happy_syt_img"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@mipmap/ab"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sulicu_happy_njll"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/sulicu_happy_nj"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/shape_address">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/gray_word"
                            android:textSize="50sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传内景照片"
                            android:textColor="@color/comment_word"
                            android:textSize="12sp"
                            android:maxLines="1"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/sulicu_happy_nj_img"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@mipmap/ab"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/sulicu_happy_but"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button_gray"
        android:text="上传审核"
        android:textColor="@color/but_word"
        android:textSize="14sp" />
</RelativeLayout>