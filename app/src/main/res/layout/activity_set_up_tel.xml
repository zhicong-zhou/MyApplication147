<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_common"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_word"
            android:text="原手机号："
            android:textSize="14sp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/set_uptel_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15863447564"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_word"
            android:text="新手机号："
            android:textSize="14sp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/set_uptel_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新手机号"
            android:textColorHint="@color/gray_word"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:background="@drawable/shape_eidt2"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/set_uptel_but"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_button"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="确认更改"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/home_word"
        android:text="新手机号须与银行手机号保持一致"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>