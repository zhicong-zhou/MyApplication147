<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/item_home_salebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_poble_agent"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="10dp">
        <ImageView
            android:id="@+id/item_home_saleImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/shop_selected"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/item_home_sale_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="维修故障"
            android:textColor="@color/home_word"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/item_home_sale_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="故障线上查看进度"
            android:textColor="@color/gray_word"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>
