<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SwingCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/swing_bg"
        android:orientation="vertical">

        <include layout="@layout/activity_common" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pale_gray" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/swing_eid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/shape_address"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:id="@+id/swing_card_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡号："
                    android:textColor="@color/home_word"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/swing_card_eid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/swing_card_txt"
                    android:background="@drawable/shape_eidt2"
                    android:gravity="right"
                    android:text="请选择银行卡"
                    android:textColor="@color/shop_word"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/swing_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额："
                    android:textColor="@color/home_word"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/swing_price_eid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/swing_price_txt"
                    android:background="@drawable/shape_eidt2"
                    android:gravity="right"
                    android:hint="请输入收款金额"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/home_word"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />

            <TextView
                android:id="@+id/swing_yj"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/swing_bg"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="收取服务费"
                android:textColor="@color/comment_word"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/swing_but"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_swing_button"
                android:gravity="center"
                android:text="确认刷卡"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>