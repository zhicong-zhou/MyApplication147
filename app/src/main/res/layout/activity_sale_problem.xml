<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_gray"
    tools:context=".view.activity.SaleProblemActivity">
    <LinearLayout
        android:id="@+id/sale_problem_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/activity_common2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pale_gray" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/sale_problem_scr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/sale_problem_ll"
        android:layout_above="@+id/sale_problem_scrll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="反馈类型"
                android:textColor="@color/comment_word"
                android:padding="15dp"/>
            <com.jzkl.util.MyGridView
                android:id="@+id/sale_problem_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/sale_problem_edi"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/shape_eidt2"
                android:hint="输入您的问题及反馈意见"
                android:textColor="@color/home_word"
                android:textColorHint="@color/gray_word"
                android:textSize="14sp"
                android:padding="15dp"
                android:gravity="top"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingRight="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:id="@+id/sale_problem_txtnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray_word"
                    android:text="0/200"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传图片"
                        android:textColor="@color/home_word"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/sale_problem_imgnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/4"
                        android:textColor="@color/gray_word"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:overScrollMode="never" />
            </LinearLayout>
            <Button
                android:id="@+id/sale_problem_but"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="提交"
                android:layout_margin="20dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/sale_problem_scrll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginBottom="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/comment_word"
            android:text="其他反馈路径"/>
        <LinearLayout
            android:id="@+id/sale_problem_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/comment_word"
                android:text="客服电话"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/shop_buttonBg"
                android:text="0351-3339000"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/pop_custorm_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/comment_word"
            android:text="工作时间：周一至周日 9:00--17:30"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="5dp"/>
    </LinearLayout>
</RelativeLayout>