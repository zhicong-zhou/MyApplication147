<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.activity.BankCreditRegisterActivity">
    <include layout="@layout/activity_common" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/home_word"
                android:text="基本信息"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/aa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/bus_star"
                    android:drawablePadding="5dp"
                    android:text="姓名"
                    android:textColor="@color/home_word"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/credit_register_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_eidt2"
                    android:hint="请输入"
                    android:textColor="@color/home_word"
                    android:textColorHint="@color/gray_word"
                    android:layout_toRightOf="@+id/aa"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:maxLines="1"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/aa2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/bus_star"
                    android:drawablePadding="5dp"
                    android:text="手机号"
                    android:textColor="@color/home_word"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/credit_register_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_eidt2"
                    android:hint="请输入"
                    android:textColor="@color/home_word"
                    android:textColorHint="@color/gray_word"
                    android:textSize="14sp"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:inputType="number"
                    android:layout_toRightOf="@+id/aa2"
                    android:gravity="right"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/aa3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/bus_star"
                    android:drawablePadding="5dp"
                    android:text="身份证号"
                    android:textColor="@color/home_word"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/credit_register_iden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_eidt2"
                    android:hint="请输入"
                    android:textColor="@color/home_word"
                    android:textColorHint="@color/gray_word"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/aa3"
                    android:gravity="right"
                    android:maxLength="18"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray" />
            <Button
                android:id="@+id/credit_register_but"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="立即申请"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/comment_word"
                android:textSize="14sp"
                android:text="信用卡推荐有礼"
                android:gravity="center"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:id="@+id/credit_register_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/credit_register_img"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>