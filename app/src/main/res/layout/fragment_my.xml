<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/shape_gradient"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_bg"
                    android:scaleType="centerCrop"/>
                <!--用户信息-->
                <RelativeLayout
                    android:id="@+id/my_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp">
                    <com.jzkl.util.ImageViewPlus
                        android:id="@+id/my_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@null"
                        android:layout_centerVertical="true"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/my_img"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/my_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="未登录"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/my_renz"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:textSize="12sp"
                            android:text="未认证"
                            android:background="@drawable/shape_my"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/my_back"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow_right_white"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"/>
                </RelativeLayout>
                <!--框-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_my_kuang"
                    android:layout_below="@+id/my_rl"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/my_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的钱包"
                        android:textColor="@color/comment_word"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:padding="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">
                        <LinearLayout
                            android:id="@+id/my_go_tixian"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <LinearLayout
                                android:id="@+id/my_price_ll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/my_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/shop_buttonBg"
                                        android:text=""
                                        android:textSize="25sp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/shop_buttonBg"
                                        android:text="元"
                                        android:textSize="14sp"/>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="目前可提现金额"
                                    android:textSize="14sp"
                                    android:textColor="@color/shop_word"
                                    android:layout_marginTop="20dp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="去提现"
                                android:textSize="14sp"
                                android:textColor="@color/red_word"
                                android:layout_marginTop="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/my_go_buy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/my_integrte"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/shop_buttonBg"
                                    android:text=""
                                    android:textSize="25sp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/shop_buttonBg"
                                    android:text="积分"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="当前剩余积分"
                                android:textSize="14sp"
                                android:textColor="@color/shop_word"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="去花费"
                                android:textSize="14sp"
                                android:textColor="@color/red_word"
                                android:layout_marginTop="10dp"
                                android:padding="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
            <!--电子卷  和  优惠卷-->
            <com.jzkl.util.MyGridView
                android:id="@+id/my_juan_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:padding="10dp">
            </com.jzkl.util.MyGridView>
            <RelativeLayout
                android:id="@+id/my_order_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/home_word"
                    android:layout_centerVertical="true"
                    android:padding="10dp"/>
                <!--<ImageView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>-->
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray"/>
            <com.jzkl.util.MyGridView
                android:id="@+id/my_order_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:padding="10dp">
            </com.jzkl.util.MyGridView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的服务"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_word"
                    android:layout_centerVertical="true"
                    android:padding="10dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pale_gray"
                android:layout_margin="10dp"/>
            <com.jzkl.util.MyGridView
                android:id="@+id/my_service_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:verticalSpacing="10dp"
                android:layout_marginBottom="10dp">
            </com.jzkl.util.MyGridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
