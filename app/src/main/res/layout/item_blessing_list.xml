<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_blessing_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape_address">
        <TextView
            android:id="@+id/item_blessing3_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="企业祝福"
            android:textColor="@color/home_word"
            android:textSize="16sp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/item_blessing_list3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="企业祝福"
            android:textColor="@color/comment_word"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
