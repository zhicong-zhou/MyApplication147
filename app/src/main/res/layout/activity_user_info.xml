<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/userInfo_bg"
    tools:context=".view.activity.UserInfoActivity">
    <include layout="@layout/activity_common2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <RelativeLayout
        android:id="@+id/userinfo_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/userinfo_head_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <com.jzkl.util.ImageViewPlus
            android:id="@+id/userinfo_recycler"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/user_head"
            android:scaleType="centerCrop"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/userinfo_arrow"/>
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/userinfo_recycler"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:overScrollMode="never"
            android:layout_toLeftOf="@+id/userinfo_arrow"
            android:layout_marginRight="5dp"/>-->

        <ImageView
            android:id="@+id/userinfo_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow_right"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/userinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户ID"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/userinfo_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/userinfo_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="级别"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/userinfo_jibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费率"
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/userinfo_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_word"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_my_kuang"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:id="@+id/set_renz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="实名认证"
                android:textColor="@color/black_word"
                android:drawableLeft="@mipmap/userinfo_idenrenz"
                android:drawablePadding="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/userinfo_renz_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""
                android:textColor="@color/comment_word"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/userinfo_renz_arrow"/>
            <ImageView
                android:id="@+id/userinfo_renz_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pale_gray" />
        <RelativeLayout
            android:id="@+id/userinfo_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="商户认证"
                android:textColor="@color/black_word"
                android:drawableLeft="@mipmap/userinfo_srenz"
                android:drawablePadding="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/userinfo_business_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""
                android:textColor="@color/comment_word"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/userinfo_business_arrow"/>
            <ImageView
                android:id="@+id/userinfo_business_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pale_gray" />
        <RelativeLayout
            android:id="@+id/userinfo_agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="代理"
                android:textColor="@color/black_word"
                android:drawableLeft="@mipmap/userinfo_drenz"
                android:drawablePadding="10dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/userinfo_agent_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""
                android:textColor="@color/comment_word"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/userinfo_agent_arrow"/>
            <ImageView
                android:id="@+id/userinfo_agent_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>