<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/item_solicu_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <!--<ImageView
            android:id="@+id/item_solicu_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pay_selected"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>-->
        <CheckBox
            android:id="@+id/item_solicu_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CheckBoxTheme"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            android:checked="false"
            android:layout_gravity="center"/>
        <com.jzkl.util.ImageViewPlus
            android:id="@+id/item_solicu_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/user_head"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/item_solicu_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/home_word"
                android:text="小明"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/item_solicu_renz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comment_word"
                    android:text="未实名"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/item_solicu_jibie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comment_word"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray"/>
</LinearLayout>
