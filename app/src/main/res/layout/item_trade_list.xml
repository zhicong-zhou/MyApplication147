<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_address"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_trade_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="刷卡-尾号【1245】"
                android:textColor="@color/home_word"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_trade_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="完成"
                android:textColor="@color/home_word"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_trade_hua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="刷卡：200元"
            android:textColor="@color/shop_word"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_trade_sjdz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(实际到账：198.00元+手续费：1元+0.95元)"
            android:textColor="@color/comment_word"
            android:textSize="12sp"
            android:paddingBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="订单号："
                android:textColor="@color/comment_word"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_trade_orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:text="DD1245621"
                android:textColor="@color/comment_word"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时&#12288;间："
                android:textColor="@color/comment_word"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_trade_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="2018-111-04 16:45:12"
                android:textColor="@color/comment_word"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_trade_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/comment_word"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
