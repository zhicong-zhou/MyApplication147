<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/item_shop_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/banner"
        android:scaleType="centerInside"/>
    <LinearLayout
        android:id="@+id/itme_shop_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/item_shop_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="费率低"
            android:textSize="12sp"
            android:background="@color/agent_bg"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/item_shop_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="可选商家"
            android:textSize="12sp"
            android:background="@color/agent_bg"
            android:padding="5dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/shop_word"
        android:textSize="14sp"
        android:text="电器"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"/>
    <TextView
        android:id="@+id/item_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_word"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"/>
</LinearLayout>
