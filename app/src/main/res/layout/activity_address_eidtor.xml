<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.AddressEidtorActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/activity_common2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/pale_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_word"
            android:text="收货人"
            android:textSize="14sp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/addr_eid_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入收货人"
            android:textColorHint="@color/gray_word"
            android:textColor="@color/home_word"
            android:textSize="14sp"
            android:background="@drawable/shape_eidt2"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_word"
            android:text="手机号"
            android:textSize="14sp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/addr_eid_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textColorHint="@color/gray_word"
            android:textColor="@color/home_word"
            android:textSize="14sp"
            android:background="@drawable/shape_eidt2"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="11"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <RelativeLayout
        android:id="@+id/addr_eid_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/addr_eid_areatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_word"
            android:text="所在地区"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/addr_eid_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择所在地区请选择"
            android:textColor="@color/home_word"
            android:textSize="14sp"
            android:background="@drawable/shape_eidt2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addr_eid_areatxt"
            android:layout_toLeftOf="@+id/addr_eid_img"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/addr_eid_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_word"
            android:text="详细地址"
            android:textSize="14sp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/addr_eid_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入详细地址"
            android:textColorHint="@color/gray_word"
            android:textColor="@color/home_word"
            android:textSize="14sp"
            android:background="@drawable/shape_eidt2"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_word"
            android:text="设置默认地址"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"/>
        <com.jzkl.util.SlideButton
            android:id="@+id/addr_eid_set"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pale_gray" />
</LinearLayout>